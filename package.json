{
  "name": "@carbonplan/zarr-layer",
  "version": "0.1.0",
  "description": "MapLibre/Mapbox custom layer for rendering Zarr datasets. Inspired by zarr-cesium, zarr-gl, and @carbonplan/maps.",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "prettier": "@carbonplan/prettier",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carbonplan/zarr-layer.git"
  },
  "homepage": "https://github.com/carbonplan/zarr-layer#readme",
  "bugs": {
    "url": "https://github.com/carbonplan/zarr-layer/issues"
  },
  "keywords": [
    "zarr",
    "maplibre",
    "mapbox"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run typecheck && npm run build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "peerDependencies": {
    "mapbox-gl": "*",
    "maplibre-gl": "*"
  },
  "peerDependenciesMeta": {
    "maplibre-gl": {
      "optional": true
    },
    "mapbox-gl": {
      "optional": true
    }
  },
  "dependencies": {
    "proj4": "^2.20.2",
    "zarrita": "^0.5.4"
  },
  "devDependencies": {
    "@carbonplan/prettier": "^1.2.0",
    "@types/proj4": "^2.5.6",
    "husky": "^9.1.7",
    "prettier": "^2.2.1",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3"
  }
}
